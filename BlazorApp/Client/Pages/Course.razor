@page "/course/{Id:int}"
@using BlazorApp.Shared.Models.ResponseModel.Course
@using BlazorApp.Shared.Models.ResponseModel.Pagination;
@using BlazorApp.Shared.Models.ResponseModel.Quiz;
@using Newtonsoft.Json;
@layout MainLayout
@inject NavigationManager Nv
@inject HttpClient Http
@inject IToastService ToastService

<style>
    body
    {
        background: #FBF9FD;
    }
    .header-image {
        width: 472px;
        height: 600px;
        border: 1px solid transparent;
        padding: 30px 19px 25px 19px;
        border-radius: 60px;
        background: url(https://training.epam.com/_next/image?url=%2F_next%2Fstatic%2Fmedia%2Fheader.075905f0.jpg&amp&w=640&amp&q=75&640w);
        background-repeat: no-repeat;
        background-position: 50%;
        background-size: cover;
        box-shadow: rgba(0, 0, 0, 0.35) 0px 5px 15px;
        overflow: hidden;
        position: relative;
        transform: rotate(8.37deg);
    }

    .card
    {
        width: 100%;
        height: 225px;
        border: 1px solid transparent;
        border-radius: 30px;
        overflow: hidden;
        position: relative;
        background: #FFFFFF;
        padding-top: 15px;
    }

    .block-title
    {
        padding-bottom: 10px;
        font-size: 14px;
        font-weight: 600;
        line-height: 14px;
        color: #4fa762;
    }

    .price-block
    {
        width: 100%;
        border-radius: 24px;
        display: flex;
        flex-direction: column;
        justify-content: center;
        padding: 20px 48px;
        background-color: #ebfcc7;
    }

    .price
    {
        font-size: 36px;
        font-weight: 600;
        line-height: 46px;
        color: #191F3D;
    }

    .info 
    {
        font-size: 26px;
        font-weight: 500;
        line-height: 46px;
        color: #191F3D;
    }

    .info-block
    {
        padding: 20px 48px;
        display: flex;
        flex-direction: row;
    }

    .info-block-item
    {
        display: flex;
        flex-direction: column;
        justify-content: center;
    }

    .details-image
    {
        transform: matrix(-1,0,0,1,0,0);
        flex-shrink: 0;
        align-self: flex-start;
        width: 486px;
        height: 548px;
        background: url(https://training.epam.com/images/single-training/details.jpg);
        background-repeat: no-repeat;
        background-position: 50%;
        background-size: cover;
        border-radius: 68px;
    }


    .icon {
        list-style-type: none;
        display: flex;
        flex-direction: row;
    }

    .icon-wrapper {
        width: 85px;
        height: 85px;
        display: flex;
        justify-content: center;
    }

    .icon-square {
        width: 100%;
        height: 100%;
        background-color: #E4ED94;
        border-radius:15px;
    }

    .icon-number {
        font-size: 36px;
        font-weight: 600;
        color: #4FA762;
        text-align: center;
    }

    .icon-square.second {
        background-color: #D4F0FE;
    }

    .icon-number.second {
        color: #2BC1F0;
    }
